
@model TodoAddVM

<h2>@(Model.Todo.Id!=0 ? "Update" : "New Task")</h2>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Upsert" method="post">
    <input type="hidden" asp-for="@Model.Todo.Id"/>
    <div class="form-floating mb-3">

        <input asp-for="@Model.Todo.Description" class="form-control" type="text">
        <label asp-for="@Model.Todo.Description">Description</label>

    </div>
    <div class="form-floating mb-3">


        <select asp-for="@Model.Todo.CategoryId" class="form-select" asp-items="@Model.Categories">
            <option value=""></option>
        </select>
        <label asp-for="@Model.Todo.CategoryId">Category</label>

    </div>
    <div class="form-floating mb-3">
        <input type="date" asp-for="Todo.DueDate" class="form-control" id="dueDateInput" />
        <label asp-for="Todo.DueDate">Due Date:</label>
    </div>
    <div class="form-floating mb-3">
        <select asp-for="@Model.Todo.StatusId" class="form-select" asp-items="@Model.Statuses">
            <option value=""></option>
        </select>
        <label asp-for="@Model.Todo.StatusId">Status:</label>
    </div>
    @if(Model.Todo.Id!=0){
        <button type="submit" class="btn btn-primary">Update</button>
    }
    else{
        <button type="submit" class="btn btn-primary">Add</button>
    }
    
    <a asp-action="Index" class="btn btn-primary">Back</a>
</form>
<script>
    // Input alanına tıklandığında tarih seçicisini aç
    document.getElementById('dueDateInput').addEventListener('click', function () {
        this.focus();
    });
</script>